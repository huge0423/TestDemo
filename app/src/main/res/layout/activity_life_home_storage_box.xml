<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.fragmentDemo1.fragDemo1_Button.Life_home_storageBox">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/title" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/life_box_line_1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center">

                <Button
                    android:id="@+id/demo1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dip"
                    android:paddingRight="18dip"
                    android:text="demo1"/>

                <Button
                    android:id="@+id/demo2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dip"
                    android:paddingRight="18dip"
                    android:text="demo2"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/life_box_line_2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:layout_below="@+id/life_box_line_1">

                <Button
                    android:id="@+id/demo3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dip"
                    android:paddingRight="18dip"
                    android:text="demo3"/>

                <Button
                    android:id="@+id/demo4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dip"
                    android:paddingRight="18dip"
                    android:text="demo4"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/life_box_line_3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:layout_below="@+id/life_box_line_2">

                <Button
                    android:id="@+id/demo5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dip"
                    android:paddingRight="18dip"
                    android:text="demo5"/>

                <Button
                    android:id="@+id/demo6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dip"
                    android:paddingRight="18dip"
                    android:text="demo6"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/life_box_line_4"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center"
                android:layout_below="@+id/life_box_line_3">

                <Button
                    android:id="@+id/demo7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dip"
                    android:paddingRight="18dip"
                    android:text="demo7"/>

                <Button
                    android:id="@+id/demo8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:paddingBottom="20dp"
                    android:paddingLeft="10dip"
                    android:paddingRight="18dip"
                    android:text="demo8"/>
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>





