<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Create_label">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="设备类型" />

        <Button
            android:id="@+id/bt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Yp-1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="标签名称" />

        <EditText
            android:id="@+id/et_label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="标签宽度" />

        <EditText
            android:id="@+id/et_label_width"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="标签高度" />

        <EditText
            android:id="@+id/et_label_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="纸张类型" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rb_paper"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="间隙纸" />

            <RadioButton
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="黑标纸"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp" />

            <RadioButton
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="穿孔纸"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"/>

            <RadioButton
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="连续纸"
                android:layout_marginStart="6dp"
                android:layout_marginLeft="6dp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="旋转角度" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/rb_angle"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="0°" />

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="90°"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"/>

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="180°"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"/>

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="270°"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"/>
            <!--                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"设置两个单选按钮间的距离-->
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="left|center">

        <TextView
            android:id="@+id/tv_Cable"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="线缆标签"
            android:layout_marginRight="272dp"/>

        <Switch
            android:id="@+id/sw_Cable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear12"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="尾巴方式"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_up"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="上"/>

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="下"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"/>

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="左"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"/>

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="右"
                android:layout_marginStart="11dp"
                android:layout_marginLeft="11dp"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear13"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center">

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="尾巴长度"/>

        <EditText
            android:id="@+id/et_tail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:maxLines="1"
            android:inputType="number|numberDecimal"
            android:hint="毫米"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/bt_create_type"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="新建" />
    </LinearLayout>

</LinearLayout>