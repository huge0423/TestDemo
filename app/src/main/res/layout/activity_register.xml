<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register"
    android:padding="10dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/sofa"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <Button
            android:id="@+id/bt_country"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="国家/地区"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="中国"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="+86"
            android:layout_gravity="center"
            android:gravity="center"/>

        <EditText
            android:id="@+id/et_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入您的手机号"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear7"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:visibility="gone">

        <EditText
            android:id="@+id/et_captcha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入验证码"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/bt_captcha"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <EditText
            android:id="@+id/et_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请输入您的密码"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/bt_forget_pw"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:layout_gravity="center|right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="登录和注册代表同意"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/bt_protocol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务协议"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp" />

        <TextView
            android:layout_width="15dp"
            android:layout_height="wrap_content"
            android:text="和"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/bt_privacy"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="隐私政策"
            android:layout_gravity="center"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
/>
    </LinearLayout>

    <Button
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="登录"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/bt_res_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册新账号"
        android:layout_gravity="center" />

    <Button
        android:id="@+id/bt_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <Button
        android:id="@+id/bt_hava_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="已有账号登录"
        android:layout_gravity="center"
        android:visibility="gone"/>

</LinearLayout>